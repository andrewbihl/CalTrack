lane :beta do
  cocoapods

  # Ensure that there that your git status is not dirty
  ensure_git_status_clean

  # Increment the build number (not the version number)
  increment_build_number

  # Commit the version bump
  commit_version_bump(xcodeproj: "CalTrack.xcodeproj")

  # Add a git tag for this build. This will automatically
  # use an appropriate git tag name
  add_git_tag

  # Push the new commit and tag back to your git remote
  push_to_git_remote

  # build your iOS app
  gym(
    scheme: "CalTrack"
  )

  # upload to Testflight
#  changelog = prompt(text: "General fixes and improvements.", multi_line_end_keyword: "END")

  pilot(
#    changelog: changelog,
    username: "faris.freecola@me.com"
  )

  #dsyms

#  download_dsyms

# instabug(api_token: 'c60e6095d9bcda332cc7f54b2a053236')

end

after_all do |lane|
  say "Successfully finished deployment (#{lane})!"
  slack(
    message: "New version successfully submitted to app store"
  )

end

error do |lane, exception|
  slack(
    message: exception.message,
    success: false
  )
end

